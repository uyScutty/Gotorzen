@page "/signup"
@using Microsoft.AspNetCore.Components.Forms

<LayoutView>
    <div class="main-content bg-info-subtle py-4">
        <div class="container">
            <div class="card mx-auto p-4" style="max-width: 600px;">
                <h4 class="text-center mb-4">OPRET BRUGER</h4>

                <EditForm Model="@signupModel" OnValidSubmit="HandleSignup">
                    <div class="row mb-3">
                        <div class="col">
                            <label>Fornavn</label>
                            <InputText class="form-control" @bind-Value="signupModel.FirstName" />
                        </div>
                        <div class="col">
                            <label>Efternavn</label>
                            <InputText class="form-control" @bind-Value="signupModel.LastName" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <InputText class="form-control" @bind-Value="signupModel.Email" />
                    </div>
                    <div class="mb-3">
                        <label>Telefonnummer</label>
                        <InputText class="form-control" @bind-Value="signupModel.PhoneNumber" />
                    </div>
                    <div class="mb-3">
                        <label>Adgangskode</label>
                        <InputText type="password" class="form-control" @bind-Value="signupModel.Password" />
                    </div>
                    <div class="mb-3">
                        <label>Gentag adgangskode</label>
                        <InputText type="password" class="form-control" @bind-Value="signupModel.ConfirmPassword" />
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" />
                        <label class="form-check-label">
                            Jeg accepterer handelsbetingelserne og privatlivspolitikken
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" />
                        <label class="form-check-label">
                            Ja tak, jeg vil gerne modtage nyhedsbreve
                        </label>
                    </div>

                    <button class="btn btn-primary w-100">OPRET BRUGER</button>
                </EditForm>

                <p class="text-center mt-3">
                    Har du allerede en konto? <a href="/login" class="text-primary fw-bold">Log ind her</a>
                </p>
            </div>
        </div>
    </div>
</LayoutView>

@code {
    private SignupModel signupModel = new();

    private async Task HandleSignup()
    {
        // Kald til din API for at oprette bruger (kan tilføjes senere)
    }

    private class SignupModel
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string PhoneNumber { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
